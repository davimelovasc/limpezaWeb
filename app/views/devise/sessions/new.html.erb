<div class="container">
  <div class="card card-login mx-auto mt-5">
    <div class="card-header">Login</div>
    <div class="card-body">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <div class="form-label-group">
            <%= f.email_field :email, autocomplete: "email", class: "form-control", required: "required", id: "inputEmail", type: "email", placeholder: "Email", autofocus: "autofocus" %>
            <label for="inputEmail">Email</label>
          </div>
        </div>
        <div class="form-group">
          <div class="form-label-group">
            <%= f.password_field :password, autocomplete: "off", type: "password", id: "inputPassword", class: "form-control", placeholder: "Senha", required: "required" %>
            <label for="inputPassword">Senha</label>
          </div>
        </div>
        <%= f.submit "Entrar",class: "btn btn-primary btn-block" %>
        
      <% end %>
      <div class="text-center">
        <a class="d-block small mt-3" href="forgot-password.html">Esqueci a senha</a>
      </div>
    </div>
  </div>
</div>
