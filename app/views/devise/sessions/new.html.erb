<div class="container">
  <div class="card card-login mx-auto mt-5">
    <div class="card-body">
    
    <% flash.each do |key, value| %>
      <div id="message" class="flash <%= key %>" style="display: none;"><%= value %></div>
    <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <div class="form-label-group">
            <%= f.email_field :email, autocomplete: "email", class: "form-control", required: "required", id: "inputEmail", type: "email", placeholder: "Email", autofocus: "autofocus" %>
            <label for="inputEmail">Email</label>
          </div>
        </div>
        <div class="form-group">
          <div class="form-label-group">
            <%= f.password_field :password, autocomplete: "off", type: "password", id: "inputPassword", class: "form-control", placeholder: "Senha", required: "required" %>
            <label for="inputPassword">Senha</label>
          </div>
        </div>
        <%= f.submit "Entrar",class: "btn btn-primary btn-block" %>
        
      <% end %>
      <div class="text-center">
        <a class="d-inline-block small mt-3" href="#" data-toggle="modal" data-target="#forgotPassModal">Esqueci a senha</a>
      </div>
    </div>
  </div>
</div>



<!-- MODAL -->
<div class="modal fade" id="forgotPassModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document" style="margin-top: 10vh;">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id: "forget-pass" }) do |f| %>
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Recuperar senha</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Informe seu e-mail abaixo: </p>

        <%= devise_error_messages! %>
        <div class="form-group">
          <div class="form-label-group">
            <%= f.password_field :email, autocomplete: "off", type: "email", class: "form-control", placeholder: "Email", id: "forgotPassword" %>
            <label for="forgotPassword">Email</label>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <div class="actions">
          <%= f.submit "Enviar", class: "btn btn-primary" %>
        </div>
      </div>


    </div>
    <% end %>
  </div>
</div>






<script>
  var message = $("#message").html();
  if(message != undefined && message != '') {
    iziToast.error({message: message});
  }
  
</script>