<%= form_for @task do |f| %>

  <div class="form-row mt-5">

    <div class="form-group col-sm-12 col-md-5 offset-md-1 col-lg-4">
      <%= f.label :name, "Nome da tarefa: " %>
      <%= f.text_field :name, placeholder: "Nome da tarefa", class: "form-control", required: "required" %>
    </div>

    <div class="form-group col-sm-12 col-md-5 offset-md-1 col-lg-4">
      <%= f.label :description, "Descrição: " %>
      <%= f.text_field :description, required: "required", placeholder: "Descrição e detalhes da tarefa", class: "form-control" %>
    </div>



    <div class="form-group col-sm-12 col-md-11 offset-md-1 col-lg-9">
    <%= f.label :spots, "Locais: " %>

      <select class="selectpicker form-control" multiple data-live-search="true" required="required" name="spot_ids[]" id="input_spots">
        <% @spots.each do |s| %>
          <option value=<%= s.id %>><%= s.name %></option>
        <% end %>
      </select>
    </div>

  </div>

  <div class="form-row mt-3">
    <div class="col-12 col-md-11 offset-md-1 col-lg-9">
      <%= link_to "Cancelar", tasks_path, class: "px-4 btn btn-primary"%>

      <%= f.submit "Salvar", class: "px-4 btn btn-primary float-right"%>
    </div>
  </div>



<% end %>
