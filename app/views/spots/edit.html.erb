<%= render 'form' %>

<script>
  var tasks = '<%= @spot.tasks.ids %>';
  tasks = JSON.parse(tasks);
  $("#tasks").selectpicker('val', tasks);


  var light_cleaning = '<%= @spot.light_cleaning %>'
  light_cleaning = light_cleaning.split(',');
  $("#light_cleaning").selectpicker('val', light_cleaning);


  var heavy_cleaning = '<%= @spot.heavy_cleaning %>'
  heavy_cleaning = heavy_cleaning.split(',');
  $("#heavy_cleaning").selectpicker('val', heavy_cleaning);

  $(document).ready(function(){
    var filePath = $(".file").val();
    filePath = filePath.split("\\");
    $(this).next('.custom-file-label').html(filePath[filePath.length-1]);



    function readURL(input) {

    if (input.files && input.files[0]) {
      var reader = new FileReader();
  
      reader.onload = function(e) {
        $('#img_preview').attr('src', e.target.result);
      }
  
      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#customFile").change(function() {
    readURL(this);
  });
  });

</script>
